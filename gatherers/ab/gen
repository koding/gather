function keywordFound() {
  OUT=`grep -rslc "$1" /home`
  output_array "$2" "$OUT"

  exit 0
}

function fileOrFolderFound() {
  OUT=$(find /home/* -name "$1" |& grep -v 'Permission denied')
  output_array "$2" "$OUT"

  exit 0
}

